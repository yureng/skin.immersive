<?xml version="1.0" encoding="UTF-8"?>

<window>

	<controls>

		<include>Common_Background_Fade</include>

		<control type="group">

			<posx>0</posx>
			<posy>720</posy>

			<animation type="VisibleChange">
				<effect type="fade" start="0" end="100" time="400" delay="400" />
				<effect type="slide" start="0,0" end="0,-520" center="auto" time="600" delay="400" tween="back" />
			</animation>

			<control type="image">

				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>300</height>
				<texture>colors/color_white.png</texture>
				<colordiffuse>Background_Normal</colordiffuse>

			</control>

			<control type="grouplist">

				<posx>128</posx>
				<posy>20</posy>
				<width>1024</width>
				<itemgap>10</itemgap>
				<orientation>vertical</orientation>

				<control type="label" id="1">

					<description>Heading</description>
					<posx>200</posx>
					<width>1024</width>
					<height>60</height>
					<label>$LOCALIZE[40043]</label>
					<font>Dialog-Header</font>

				</control>

				<control type="label" id="10">

					<description>Line 1</description>
					<width>1024</width>
					<height>20</height>
					<label></label>
					<font>Dialog-Detail</font>
					<visible>!String.IsEmpty(Control.GetLabel(10))</visible>

				</control>

				<control type="label" id="11">

					<description>Line 2</description>
					<width>1024</width>
					<height>20</height>
					<label></label>
					<font>Dialog-Detail</font>
					<wrapmultiline>true</wrapmultiline>
					<visible>!String.IsEmpty(Control.GetLabel(11))</visible>

				</control>

				<control type="label" id="12">

					<description>Line 3</description>
					<width>1024</width>
					<height>20</height>
					<label></label>
					<font>Dialog-Detail</font>
					<visible>!String.IsEmpty(Control.GetLabel(12))</visible>

				</control>

			</control>

		</control>

	</controls>

</window>
