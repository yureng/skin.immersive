<?xml version="1.0" encoding="UTF-8"?>

<window id="65">

	<defaultcontrol always="true">50</defaultcontrol>

	<zorder>2</zorder>

	<include>Common_Animation_Window</include>

	<controls>

		<!--Background Area-->
		<include>Common_Background</include>

		<control type="group">

			<include>Common_Dimensions</include>
			<include>Common_Animation_Window</include>

			<!--Top Area-->
			<include>Common_Breadcrumb</include>
			<include>Common_Clock</include>
			<include>Common_Overlay</include>

			<!--Content Area-->
			<control type="group">

				<posx>0</posx>
				<posy>100</posy>
				<width>1280</width>
				<height>480</height>

				<!--Animation-->
				<include>Common_Animation_Content</include>

				<control type="group">

					<posx>60</posx>
					<posy>0</posy>

					<visible>Control.IsVisible(50)</visible>

					<include>Common_Animation_View</include>

					<control type="label">

						<width>1000</width>
						<label>$LOCALIZE[40000]</label>
						<include>Common_Section_Label</include>

					</control>

					<control type="group">

						<posx>0</posx>
						<posy>60</posy>
						<width>300</width>
						<height>440</height>

						<control type="image">

							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>440</height>
							<texture background="true">colors/color_white.png</texture>
							<colordiffuse>Settings_Background_Dark</colordiffuse>

						</control>

						<control type="image">

							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>170</height>
							<texture background="true" fallback="fallbacks/fallback_movies.jpg">$INFO[Container(50).ListItem.Art(fanart)]</texture>
							<aspectratio aligny="top">scale</aspectratio>
							<fadetime>400</fadetime>

						</control>

						<control type="textbox">

							<posx>20</posx>
							<posy>180</posy>
							<width>260</width>
							<height>60</height>
							<label>$INFO[Container(50).ListItem.Tagline]</label>
							<font>Menu-ExtendedList-Header</font>
							<textcolor>Settings_Label</textcolor>
							<aligny>top</aligny>
							<shadowcolor>00FFFFFF</shadowcolor>
							<autoscroll>false</autoscroll>

						</control>

						<control type="group">

							<posx>20</posx>
							<posy>248</posy>
							
							<control type="image">

								<posx>-6</posx>
								<posy>-3</posy>
								<width>32</width>
								<height>32</height>
								<texture>$VAR[View_Item_Star]</texture>
								<colordiffuse>Settings_Label</colordiffuse>

							</control>
								
							<control type="label">
								<posx>32</posx>
								<height>20</height>
								<label>$VAR[View_Item_Rating]</label>
								<textcolor>Settings_Label</textcolor>
								<font>Content-Label-Small</font>
								<align>left</align>
							</control>

						</control>

						<control type="textbox">

							<posx>20</posx>
							<posy>270</posy>
							<width>260</width>
							<height>125</height>
							<label>$INFO[Container(50).ListItem.Plot]</label>
							<font>Menu-ExtendedList-Details</font>
							<textcolor>Settings_Label</textcolor>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<shadowcolor>00FFFFFF</shadowcolor>
							<autoscroll>false</autoscroll>

						</control>

						<control type="label">

							<posx>20</posx>
							<posy>400</posy>
							<width>260</width>
							<height>26</height>
							<label>$INFO[Container(50).ListItem.Studio]</label>
							<font>Menu-ExtendedList-Small</font>
							<textcolor>Settings_Label</textcolor>
							<aligny>center</aligny>

						</control>

						<control type="image">

							<posx>250</posx>
							<posy>394</posy>
							<width>40</width>
							<height>40</height>
							<texture>$INFO[Container(50).ListItem.Overlay]</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Settings_Label</colordiffuse>

						</control>

					</control>

					<control type="fixedlist" id="50">

						<posx>320</posx>
						<posy>20</posy>
						<width>1500</width>
						<height>480</height>
						<onup>10000</onup>
						<ondown>9000</ondown>
						<onleft>50</onleft>
						<onright>50</onright>
						<viewtype label="Poster">wrap</viewtype>
						<orientation>horizontal</orientation>
						<pagecontrol>60</pagecontrol>
						<focusposition>0</focusposition>
						<scrolltime tween="cubic" easing="out">600</scrolltime>
						<preloaditems>2</preloaditems>

						<include>Common_Animation_HideWhenScrolling</include>

						<itemlayout width="320" height="480">

							<control type="image">

								<posx>0</posx>
								<posy>40</posy>
								<width>300</width>
								<height>440</height>
								<texture background="true" fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Thumb]</texture>
								<aspectratio>stretch</aspectratio>

							</control>

						</itemlayout>

						<focusedlayout width="320" height="480">

							<control type="image">

								<posx>0</posx>
								<posy>40</posy>
								<width>300</width>
								<height>440</height>
								<texture background="true" fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Thumb]</texture>
								<aspectratio>stretch</aspectratio>

							</control>

						</focusedlayout>

						<content target="video">special://skin/playlists/In Progress (Movies).xsp</content>

					</control>

					<!--Scrollbar-->
					<control type="scrollbar" id="60">

						<include>Common_Scrollbar_Horizontal</include>
						<posy>520</posy>

						<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(50).Scrolling">Conditional</animation>

					</control>

				</control>

			</control>

			<!--Bottom Area-->
			<control type="group">

				<posx>0</posx>
				<posy>620</posy>
				<width>1280</width>
				<height>100</height>

				<control type="grouplist">

					<posx>60</posx>
					<posy>20</posy>
					<width>1160</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<itemgap>40</itemgap>

					<control type="label">

						<width min="0" max="200">auto</width>
						<height>60</height>
						<label>$INFO[Container(50).NumItems,, $LOCALIZE[40038]]</label>
						<font>Content-Label</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>top</aligny>

					</control>

				</control>

			</control>

		</control>

	</controls>

</window>
