<?xml version="1.0" encoding="UTF-8"?>

<window>

	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="100" />
	</animation>

	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" />
	</animation>
	
	<defaultcontrol always="true">11</defaultcontrol>
	
	<controls>
		<control type="group">
			<top>100</top>
			<centerleft>50%</centerleft>
			<width>320</width>
			
			<control type="image">
				<width>320</width>
				<height>100</height>				
				<texture>colors/color_white.png</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>				
			</control>
			
			<control type="label" id="10">
				<description>Dialog header</description>
				<left>20</left>
				<top>20</top>
				<width>300</width>
				<height>20</height>				
				<font>NowPlaying-Header</font>
				<textcolor>Label_Normal</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			
			<control type="label" id="12">
				<description>Slider Value</description>
				<left>0</left>
				<top>20</top>
				<width>300</width>
				<height>20</height>
				<font>NowPlaying-Header</font>
				<textcolor>Label_Normal</textcolor>
				<align>right</align>
				<aligny>center</aligny>				
			</control>
			
			<control type="slider" id="11">
				<description>Slider</description>
				<left>20</left>
				<top>65</top>
				<width>280</width>
				<texturesliderbar border="2">colors/color_grey.png</texturesliderbar>
				<textureslidernib border="2">colors/color_white.png</textureslidernib>
				<textureslidernibfocus border="2">colors/color_white.png</textureslidernibfocus>
				<onup>11</onup>
				<ondown>11</ondown>
				<onleft>11</onleft>
				<onright>11</onright>
			</control>

		</control>
	</controls>
	
</window>
